// JavaScript 
const audio = document.getElementById('jeden');
let playOrNot = false;

function playPause() {
    if (playOrNot === false) {
        audio.play();
        playOrNot = true;
    } else {
        audio.pause();
        playOrNot = false;
        audio.currentTime = 0;
    }
}

// JavaScript 
const audio2 = document.getElementById('dwa');
let playOrNot2 = false;

function playPause2() {
    if (playOrNot2 === false) {
        audio2.play();
        playOrNot2 = true;
    } else {
        audio2.pause();
        playOrNot2 = false;
        audio2.currentTime = 0;
    }
}
